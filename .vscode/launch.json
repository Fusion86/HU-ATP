  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/smickelscript"
    },
    {
      "name": "CLI",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/smickelscript/cli.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["native", "-i", "example_native/functions.sc",]
    }
  ]
}
